@model (int bookId, IEnumerable<User> allPublishers)

@{
    Layout = null;
}

<form hx-post="/translation-request" hx-swap="outerHTML">
    <label for="user-id" style="margin-left: 40px">Odaberi izdavača</label>
    <select id="user-id" name="userId" class="searchbtn">
        @foreach (User user in Model.allPublishers)
        {
            <option value="@user.Id">@user.DisplayName</option>
        }
    </select>
    <input type="hidden" name="bookId" value="@Model.bookId"/>
    
    <input class="searchbtn" type="submit" value="Pošalji zahtjev"/>
</form>