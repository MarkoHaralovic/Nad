@using StoZelisCitati.Helpers
@model Offer

@{
    Layout = null;
}

<form hx-put="/book/offer/@Model.Id" hx-target="this" hx-swap="outerHTML">
    <div>
        <label for="price">Cijena</label>
        <input type="number" id="price" name="price" value="@Model.Price">
    </div>
    <div class="form-group">
        <label for="state">Stanje</label>
        <select id="state" name="state">
            <option value="@StateType.New" selected=@(Model.State == StateType.New)>Novo</option>
            <option value="@StateType.Used" selected=@(Model.State == StateType.Used)>Polovno</option>
        </select>
    </div>
    <div class="form-group">
        <label for="count">Količina</label>
        <input type="number" min="0" id="count" name="count" value="@Model.Count">
    </div>
    <button class="btn">Potvrdi</button>
    <button class="btn" hx-get="/book/offer/@Model.Id">Odbaci</button>
</form>