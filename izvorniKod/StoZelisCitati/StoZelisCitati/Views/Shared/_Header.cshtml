<div class="header-container">   
    <div id="header">
        <div id="logo" class="ot">
            <a href="/" style="text-decoration: none; color: white;"> Logo </a>
        </div>
        <div id="krug" class="kr">
            <a href="/filter">
                <img id="povecalo" src="/images/traziLogo.png" alt="" width="80px" onclick="searchButtonClicked()">
            </a>
        </div>
        <div id="header-right">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="/account/profile" class="user-btn"><p>My account</p></a>
                <a href="/account/logout" class="user-btn">Logout</a>
                @if (User.IsInRole("admin"))
                {
                    <a href="/account/requests">Zahtjevi za registraciju</a>
                }
            }
            else
            {
                <a href="/account/login" class="user-btn"><p>Login</p></a>
                <a href="/account/register" class="user-btn">Register</a>
            }
        </div>
    </div>
</div>